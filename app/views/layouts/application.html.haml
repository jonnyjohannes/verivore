%html
  %head
    %title
      Verivore - #{h(yield(:title) || "Loving Food and Tech")}
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = csrf_meta_tag
  %body
    #header
      %ul
        %li
          %h3= link_to "Verivore", root_path
        %li= link_to "Blog", posts_path
        /%li= link_to "Canned Foods", canned_foods_path
