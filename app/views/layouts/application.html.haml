      .grid_9
        %p{:style => "color: green"}= flash[:notice]
        = yield
      .grid_3
        %h3 About:
        %p Your friendly neighbourhood geek and lover of physics, tech and food
        #foodtree
          %h3 Checkout where I work:
          = link_to "Foodtree", "http://foodtree.com"
        .nav  
          %h3 Find me elsewhere:
          %ul
            %li= link_to image_tag("mail.png"), "mailto:jonny@foodtree.com"
            %li= link_to image_tag("facebook.png"), "http://facebook.com/jonnyjohannes"
            %li= link_to image_tag("twitter.png"), "http://twitter.com/jonnyjohannes"
            %li= link_to image_tag("linkedin.png"), "http://ca.linkedin.com/in/jonnyjohannes"
          

        
          
