= div_for post do
  %h3
    = link_to_unless_current h(post.title), post
  .date
    = post.created_at.strftime("%B %d, %Y")
  - if admin?
    = link_to 'Edit', edit_post_path(post)
    |
    = link_to 'Destroy', post, :method => :delete, :confirm => "Are you sure?"
  .post_body
    = raw(RDiscount.new(h(post.body)).to_html)
