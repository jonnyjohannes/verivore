= form_for @post do |f|
  %p
    = f.label :title, "Title"
    = f.text_field :title
    = f.check_box :published
    Publish
  %p 
    = f.label :tag_names, "Tags"
    = f.text_field :tag_names
  %p
    = f.label :body, "Body"
    %br/
    = f.text_area :body, :size => "120x30"
  %p.button 
    = f.submit
